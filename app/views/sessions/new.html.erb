 <div class='container'>

 <div class='card ml-4 mr-4 mb-4 mt-4'>
    <div class='jumbotron'>
    
    <div>
    <h3 class='text-center login-title'>Log In</h3>
    
    <%= form_with url: session_path,local: true do |f|%>

    <div class='form-group'>
    <%=f.label :email,class:'label'%>
    <%= f.email_field :email, class:'form-control',placeholder:'Email' %>
    </div>

    <div class='form-group'>
    <%= f.label :password,class:'label'%>
    <%= f.password_field :password, class:'form-control',placeholder:'password' %>
    </div>

    <div class='form-group text-center'>
    <%= f.submit 'LOGIN' ,class:'btn btn-primary'%>
    </div>
    <%end%>

    <div class= 'redirects content'>
    <p class='text-center'>Forgot Password?</p>
    <h6 class='text-center'>Dont have an account? Sign up <%= link_to 'here',new_user_path%></h6>
    </div>

    </div>


  </div>
 </div>
</div>
<br><br><br><br><br>
