<div class='container'>

  <div class='card ml-4 mr-4 mt-4 mb-4'>
   <div class='jumbotron'>



      <h3 class='signup-title text-center'>Sign Up</h3>

      <%= form_with model:@user, local: true do |f| %>

      <% if @user.errors.present?%>
      <%= @user.errors.present.full_messages.join(', ')%>
      <%end%>

      <div class= 'form-group'>
        <%= f.label :first_name,class:'label'%>
        <%= f.text_field :first_name,class:'form-control' %>
      </div>

      <div class= 'form-group'>
        <%= f.label :last_name,class:'label'%>
        <%= f.text_field :last_name,class:'form-control' %>
      </div>

      <div class= 'form-group'>
        <%= f.label :email,class:'label'%>
        <%= f.text_field :email, class:'form-control' %>
      </div>

      <div class= 'form-group'>
        <%= f.label :password,class:'label'%>
        <%= f.password_field :password,class:'form-control' %>
      </div>

      <div class= 'form-group'>
        <%= f.label :password_confirmation,class:'label'%>
        <%= f.password_field :password_confirmation,class:'form-control' %>
      </div>
      
      <div class= 'form-group text-center'>
        <%= f.submit 'Sign up',class:'btn btn-primary'%>
      </div>
    <% end %>

    <p class='content text-center'>Already have an account? <%= link_to 'Login',new_session_path%></p>

    
  </div>
 </div>
</div>