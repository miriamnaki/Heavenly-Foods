



  
  <% menu_items.each do |item|%>
  
 <div class='col-4'>
  <div class="card mb-3 card-effect" style="width: 18rem;">
  <% if item.image.attached?%>
    <%= image_tag(item.image,class:'index_item_image') %>
    <%end%>
  <div class="card-body">
    
    <h4> <%= link_to item.title.titleize, menu_item_path(item),class:"card-title"%></h4>
    <h6><%= link_to  number_to_currency(item.price),  menu_item_path(item),class:"card-title"%></h6>
    
        <%= link_to("ADD TO CART", shopping_cart_items_path,class:'btn btn-primary') %>
  </div>
  </div>
</div>

<%end%>


  
  
  