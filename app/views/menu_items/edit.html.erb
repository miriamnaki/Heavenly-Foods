<div class='container'>

<h3 class='new_item_title'>update your items</h3>
<%= form_for @menu_item, local: true do |f|%>
<% if @menu_item.errors.present? %>
<%= @menu_item.errors.full_messages.join(', ')%>
<%end%>

<div class='form-group mt-3'>
<%= f.label :title,class:'label' %>
<%= f.text_field :title, class:'form-control' %>
</div>

<div class ='form-group'>
<%= f.label :description,class:'label' %>
<%= f.text_field :description, class:'form-control' %>
</div>

<div class ='form-group'>
<%= f.label :price,class:'label' %>
<%= f.number_field :price, class:'form-control' %>
</div>


<div class='form-group'> 
<%= f.label :image,class:'label'%>
<%= f.file_field :image%>
</div>

<div>
 <%= label_tag 'category'%>
 <%= text_field_tag 'category'%>
 </div>


 <div class='form-group'>
 <%= label_tag :'Menu Type'%>
 <%= f.select :menutype_id, Menutype.all.map {|m| [m.menutype,m.id]} %>
 </div>

<div class='form-group'>
<%= f.submit 'UPLOAD' ,class:'btn btn-primary'%>
</div>
<% end %>


<br><br><br><br><br><br>
</div>