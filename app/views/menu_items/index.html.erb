 <div class='container'>

 <h5>SHOP</h5>

 <div>
 <% Category.all.each do |category|%>
 <li>
 <%= link_to category.name,category_path(category) %>
 </li>
 <%end%>
 </div>

  <div class="row">
    <% @menu_items.each do |item|%>

      <div class='col-4'> 
            <% if item.image.attached?%>
            <%= image_tag(item.image,class:'menu_item_image show') %>
            <%end%>
        <div class='col-4'> 
            <h3 class=title> <%= link_to item.title, menu_item_path(item)%></h3>
        </div>

        <div class='col-4'> 
            <h4 class='title'>$<%= item.price%></h4>
        </div>
      </div>

  

  <%end%>
  </div>
</div>