 <div class='container'>


<div class='jumbotron'>
  <div class='ml-4 mr-4 mb-4 mt-4 '>
  <div class ='d-flex justify-content-left'>
    <h5 class='d-inline category-title'>CATEGORIES:</h5>
     
        <div>
        <% Category.all.each do |category|%>
          <div class='d-inline ml-2'>
            <%= link_to category.name,category_path(category),class:'category-name' %>
          </div>
        <%end%>
        </div>

    </div>

    <hr>

        
        <%if @menu_item_categories%>
          <h4 class='category-title'><%= @category.name.pluralize%></h4>
        
        <%end%>


        <div class='card inner-jumbotron'>
        <div class='ml-4 mr-4 mb-4 mt-4'>
        <div class="row">
            <% @menu_item_categories.each do |menu_item_category|%>
              <% item = menu_item_category.menu_item%>
              <% if item %>
                    <div class='col-4'> 
                          <% if item.image.attached?%>
                          <%= image_tag(item.image,class:'menu_item_image') %>
                          <%end%>
                        <div>
                        <h4 class='title' ><%= link_to item.title.titleize, menu_item_path(item),class:'title-price' %></h4>
                        <h4 class='title title-price'>$<%= link_to item.price, menu_item_path(item),class:'title-price'%></h4>
                        </div>
                    </div>

                        
              <%end%>
          <%end%>
        </div>
        </div>
        </div>

  </div>
</div>
</div>
