<div class = 'container'>
<h5>Write to us</h5>

 <div class="form-group mb-3">
<%= label_tag :name,'Name',class:"required-field" %>
<%= text_field_tag :name,nil,class: "form-control" %>
</div>

<div class ='form-group mb-3'>
<%= label_tag :email,'Email',class:"required-field"%>
<%= email_field_tag :email, nil, class: 'form-control'%>
</div>



<div class="form-group mb-3">
<%= label_tag :message, 'Message',class:"required-field" %>
<%= text_area :message, nil, class: 'form-control',:cols => 30, :rows => 10 %>
</div>

<div class="form-group mb-3">
<%= submit_tag 'SEND' , class:'btn btn-outline-primary btn-lg'%>
</div>


</div>